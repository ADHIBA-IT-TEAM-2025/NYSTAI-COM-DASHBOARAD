generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String // store hashed password
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  bannerUrl String?
  iconUrl   String? // new field for category icon
  products  Product[]
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  subName     String
  code        String
  coverDesc   String
  mainDesc    String
  keyFeatures String[]
  categoryId  Int
  category    Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  images      ProductMedia[] // <-- ProductMedia relation
}

model ProductMedia {
  id        Int     @id @default(autoincrement())
  type      String
  text      String?
  imageUrl  String
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
